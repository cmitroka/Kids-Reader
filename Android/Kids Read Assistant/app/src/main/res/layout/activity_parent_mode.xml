<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonAddContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="OnClickAUserData"
        android:text="Add Custom Content" />

    <Button
        android:id="@+id/buttonDownloadYours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="OnClickDownloadUserContent"
        android:text="Download Your Custom Content" />

    <Button
        android:id="@+id/buttonDownloadOurs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="OnClickDownloadOurContent"
        android:text="Download Our Content" />

    <Button
        android:id="@+id/buttonModDel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="OnClickMDUserData"
        android:text="Modify or Delete Your Saved Data" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="OnClickSettings"
        android:text="Settings" />

    <Button
        android:id="@+id/buttonChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="OnClickChangePassword"
        android:text="Change Password" />

    <Button
        android:id="@+id/buttonVideoTutorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="OnClickVideoTutorial"
        android:text="Video Tutorial" />

    <Button
        android:id="@+id/buttonAboutTheApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="OnClickAboutTheApp"
        android:text="About The App" />

</LinearLayout>
