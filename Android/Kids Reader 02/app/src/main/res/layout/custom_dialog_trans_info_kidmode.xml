<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="325dp"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/text_rounder_border00"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Hi There!  Looks like this is your first time using the app – thanks for giving it a try."
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="You’ll see these setup tips one time, then you’re on your own. "
        android:textSize="16dp" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="The first thing you have to do is choose some material for your child to practice reading, and/or enter your own."
        android:textSize="16dp" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Please tap the button below (Settings/Parent Mode) to get started."
        android:textSize="16dp" />


    <Button
        android:id="@+id/buttonDismissTipKR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dismiss Tip" />

</LinearLayout>
