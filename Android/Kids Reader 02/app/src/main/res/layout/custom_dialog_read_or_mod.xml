<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewDynamicLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="What do you want to do?" />

    <Button
        android:id="@+id/cmdPracticeReading"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="OnClickPracticeReading"
        android:text="Go To Reading Mode" />

    <Button
        android:id="@+id/cmdModEntry"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="OnClickModEntry"
        android:text="Stay in Settings/Parent Mode" />
</LinearLayout>
